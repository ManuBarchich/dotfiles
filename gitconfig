[user]
	name = Yann Lugrin
	email = yann.lugrin@liquid-concept.ch
[alias]
	co = checkout
	ci = commit
	st = status
	up = !git pull --rebase && git push
	unstage = reset HEAD
	ignored = "!git ls-files --others --exclude-standard"
	pending = !git --no-pager log origin/master..master && echo
	changelog = "!f() { LAST_VERSION=`git describe --match '[0-9]*.[0-9]*' --abbrev=0 --tags HEAD`; echo \"Change from $LAST_VERSION\"; git log $LAST_VERSION..HEAD --pretty=%s --grep='^\\s*\\[.+\\]' -E | sort; }; f"
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.gitignore
	quotepath = false
	editor = vim
[branch]
	autosetupmerge = true
	autosetuprebase = always
[push]
	default = upstream
[rebase]
	autosquash = true
