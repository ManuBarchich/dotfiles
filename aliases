# Utilities
alias r!='. ~/.zshrc'
alias mkdir='mkdir -p'

# Git
alias g='git'
compdef _git g=git
alias gst='git status'
compdef _git gst=git-status
alias gc='git commit'
compdef _git gc=git-commit
alias gc!='git commit --amend'
compdef _git gc!=git-commit
alias gap='git add --patch'
compdef _git gap=git-commit
alias gp='git push'
compdef _git gp='git push'
alias gup='git pull'
compdef _git gup='git pull'
